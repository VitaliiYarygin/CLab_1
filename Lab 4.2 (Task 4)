#include <cstdlib>
#include <iostream>
#include <cmath>
 
using namespace std;
 
int main() {
    float x, y, c;
    
    cout << "Enter the number x: ";
    cin >> x;
    cout << "Enter the number y: ";
    cin >> y; 
    
    for (int i=0; i<1; i++) {
        
        if (x >= 1 && x <= 25 && y >= 1 && y <= 25 ) {
            c = pow(x, 2) + pow(y, 2);
            cout << "Result is: ";
            cout << c;
        }
        else {
            cout << "Error... Try again.";
        }
    }
    return 0;
}
